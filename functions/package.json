{
  "name": "xpeak-functions",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for XPeak",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.0.0",
    "@google/genai": "^1.34.0"
  },
  "devDependencies": {
    "typescript": "^5.8.2",
    "@types/node": "^22.14.0"
  },
  "private": true
}
